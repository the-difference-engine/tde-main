<div class="container">
  <div class="new-project-container">
    <legend>Create Portfolio Project</legend>
    <%= form_for @project, url: projects_path, html: { multipart: true } do |f| %>
      <% if @project.errors.any? %>
        <div class="alert alert-dismissible alert-danger">
          <button type="button" class="close" data-dismiss="alert">Ã—</button>
          <h4 class="alert-validation">
            <%= pluralize(@project.errors.count, "error") %> prohibited
            this client from being saved:
          </h4>
          <% @project.errors.full_messages.each do |msg| %>
            <p><%= msg %></p>
          <% end %>
        </div>
      <% end %>
      <div class="form-group">
        <%= f.label "Upload Portfolio Image", class: "control-label" %>
        <%= f.file_field :portfolio_image %>
      </div>
      <div class="form-group">
        <%= f.label "Upload Slider Image One", class: "control-label" %>
        <%= f.file_field :image_one %>
      </div>
      <div class="form-group">
        <%= f.label "Upload Slider Image Two", class: "control-label" %>
        <%= f.file_field :image_two %>
      </div>
      <div class="form-group">
        <%= f.label "Upload Slider Image Three", class: "control-label" %>
        <%= f.file_field :image_three %>
      </div>
      <div class="form-group">
        <%= f.label :title, class: "control-label" %>
        <%= f.text_field :title, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :description, class: "control-label" %>
        <%= f.text_area :description, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.submit "Create Project", class: "btn btn-theme-color btn-lg" %>
      </div>
    <% end %>
  </div>
</div>