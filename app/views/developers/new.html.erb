<div class="container">
  <div class="new-developer-container">
    <legend>Create New Developer</legend>
    <%= form_for @developer, url: developers_path, html: { multipart: true } do |f| %>
      <% if @developer.errors.any? %>
        <div class="alert alert-dismissible alert-danger">
          <button type="button" class="close" data-dismiss="alert">Ã—</button>
          <h4 class="alert-validation">
            <%= pluralize(@developer.errors.count, "error") %> prohibited
            this developer from being saved:
          </h4>
          <% @developer.errors.full_messages.each do |msg| %>
            <p><%= msg %></p>
          <% end %>
        </div>
      <% end %>
      <div class="form-group">
        <%= f.label "Upload Image", class: "control-label" %>
        <%= f.file_field :developerpic %>
      </div>
      <div class="form-group">
        <%= f.label :first_name, class: "control-label" %>
        <%= f.text_area :first_name, class: "form-control" %>
      </div>
       <div class="form-group">
        <%= f.label :last_name, class: "control-label" %>
        <%= f.text_area :last_name, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :title, class: "control-label" %>
        <%= f.text_field :title, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.submit "Create developer", class: "btn btn-theme-color btn-lg" %>
      </div>
    <% end %>
  </div>
</div>